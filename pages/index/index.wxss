/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 80%;
  animation: rotate 3s linear infinite;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 80px;
}
@keyframes rotate{
  from{transform: rotate(0deg)}
  to{transform: rotate(360deg)}
}